{
  "name": "fit-me",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "material-ui": "^0.20.0",
    "node-sass-chokidar": "^1.2.0",
    "npm-run-all": "^4.1.2",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-router-dom": "^4.2.2",
    "react-scripts": "1.1.1"
  },
  "scripts": {
    "watch-css": "npm run build-css && node-sass-chokidar src/ -o src/ --watch --recursive",
    "start-js": "react-scripts start",
    "start": "npm-run-all -p watch-css start-js",
    "build-js": "react-scripts build",
    "build-css": "node-sass-chokidar src/ -o src/",
    "build": "npm-run-all build-css build-js",
    "deploy": "npm run deploy:serverless && npm run deploy:assets",
    "deploy:serverless": "sls deploy",
    "deploy:assets": "aws s3 sync build/ s3://johndrew-serverless-fit-me-client",
    "test": "react-scripts test --env=jsdom",
    "eject": "react-scripts eject"
  },
  "devDependencies": {
    "serverless-single-page-app-plugin": "^1.0.2"
  }
}
